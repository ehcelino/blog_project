<h1>Log in</h1>


<% if flash[:alert] %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:danger] %>
  <script>
    window.confirm("<%= flash[:danger] %>");
  </script>
<% end %>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag "UsuÃ¡rio" %><br />
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag "Senha" %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= label_tag "Lembrar-me" %><br />
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>
  <%= hidden_field_tag :from_url, params[:previous_url] %>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
