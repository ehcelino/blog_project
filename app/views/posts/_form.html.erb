<%= form_with model: post do |ps| %>
  <dl>
    <dt>
      <%= ps.label 'Título'%>
      <%= ps.text_field :title %>
    </dt>
    <dt>
      <%= ps.label 'Texto'%>
      <%= ps.text_area :body, rows: 15, cols: 100 %>
    </dt>
    <dt>
      <%= ps.hidden_field :user_id, value: current_user.id %>
      <%= ps.label 'Usuário: ' + current_user.username %>
    </dt>
    <dt>
      <%= ps.submit 'Salvar' %>
    </dt>
  </dl>
<% end %>
      <%= button_to "Cancelar", root_path, method: :get %>
